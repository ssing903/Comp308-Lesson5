<% include ../partials/header.ejs %>
    
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <a class="btn btn-primary" href="/contact-list/add" role="button">
              <i class="fa fa-plus-circle"></i>   Add a Contact
            </a>
            <br>
            <table class="table table-bordered table-hover table-striped">
              <!-- Header Row -->
              <tr>
                <th class="text-center">First Name</th>
                <th class="text-center">Last Name</th>
                <th class="text-center">Age</th>
              </tr>
              <!-- Repeatable Template Row -->
              <% for (let count = 0; count < contactList.length; count++) { %>
                <tr>
                  <td class="text-center"><%=contactList[count].FirstName %></td>
                  <td class="text-center"><%=contactList[count].LastName %></td>
                  <td class="text-center"><%=contactList[count].Age %></td>
                </tr>
              <% } %>
            </table>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>